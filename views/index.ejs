            <div class="recipes_image" style = "background-image : url('<%=data.recipes[i].image %>');">
            &nbsp &nbsp &nbsp
            <div class="recipes_title"><%=data.recipes[i].title %></div>
            &nbsp &nbsp &nbsp
            <!-- <div class="recipes_ingr"><%=data.recipes[i].ingr %>
            &nbsp &nbsp &nbsp -->
            
          </div>
        </a>
      </div>
    <% } %>
        
      </div>
  

  

